#!/bin/sh
TOP="$(cd $(dirname "$0")/../..; pwd)"

# first load the paths. These have been generated from the configure/RELEASE
# tree. If we have a -d arg then load the opi/edl paths first
shopt -s nullglob
unset EDMDATAFILES
if [ "$1" = "-d" ]; then
    for d in ${TOP}/*App/opi/edl; do
        EDMDATAFILES="${EDMDATAFILES}${d}:"
    done
    EDMDATAFILES="${EDMDATAFILES}${TOP}/data:"
    EDMDATAFILES="${EDMDATAFILES}/dls_sw/prod/R3.14.12.7/support/motor/6-10dls3/motorApp/opi/edl:"
    EDMDATAFILES="${EDMDATAFILES}/dls_sw/work/R3.14.12.7/support/pmacCoord/pmacCoordApp/opi/edl:"
    EDMDATAFILES="${EDMDATAFILES}/dls_sw/work/R3.14.12.7/support/jjc62351/pmacUtil/pmacUtilApp/opi/edl:"
    EDMDATAFILES="${EDMDATAFILES}/dls_sw/prod/R3.14.12.7/support/tpmac/3-11dls18/pmacApp/opi/edl:"

    OPTS="-x -eolc"
else
    OPTS="-x -eolc -noedit"
fi
EDMDATAFILES="${EDMDATAFILES}${TOP}/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.7/support/motor/6-10dls3/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/work/R3.14.12.7/support/pmacCoord/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/work/R3.14.12.7/support/jjc62351/pmacUtil/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.7/support/tpmac/3-11dls18/data"

export EDMDATAFILES

# Set the path to include any scripts in data dirs
export PATH=${EDMDATAFILES}:${PATH}
edm ${OPTS}  D1.edl