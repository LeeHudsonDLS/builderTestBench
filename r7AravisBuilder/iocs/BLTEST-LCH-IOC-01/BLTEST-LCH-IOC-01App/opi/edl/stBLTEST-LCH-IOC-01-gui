#!/bin/sh
TOP="$(cd $(dirname "$0")/../..; pwd)"

# first load the paths. These have been generated from the configure/RELEASE
# tree. If we have a -d arg then load the opi/edl paths first
shopt -s nullglob
unset EDMDATAFILES
if [ "$1" = "-d" ]; then
    for d in ${TOP}/*App/opi/edl; do
        EDMDATAFILES="${EDMDATAFILES}${d}:"
    done
    EDMDATAFILES="${EDMDATAFILES}${TOP}/data:"
    EDMDATAFILES="${EDMDATAFILES}/dls_sw/prod/R3.14.12.7/support/adUtil/2-19/adUtilApp/opi/edl:"

    OPTS="-x -eolc"
else
    OPTS="-x -eolc -noedit"
fi
EDMDATAFILES="${EDMDATAFILES}${TOP}/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.7/support/ADCore/3-4dls1/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.7/support/adUtil/2-19/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.7/support/aravisGigE/3-0dls1-2/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.7/support/ffmpegServer/3-1dls2-2/data"

export EDMDATAFILES

# Set the path to include any scripts in data dirs
export PATH=${EDMDATAFILES}:${PATH}
edm ${OPTS}  OAV.edl